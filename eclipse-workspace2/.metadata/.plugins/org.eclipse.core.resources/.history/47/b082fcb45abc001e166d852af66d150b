package com.simpli.interthread;


class Account {
	
	private double balance = 2000;
	
	public void withdraw(int amount) {
		
		System.out.println("withdrawl is happening with amount = "+amount);
		
		balance -= amount;
	}
	
    public void deposit(int amount) {
		
		balance += amount;
	}
	
}

