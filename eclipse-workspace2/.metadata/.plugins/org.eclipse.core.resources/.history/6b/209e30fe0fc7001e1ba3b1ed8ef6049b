package com.simpli.calculator;

public class MathUtil {

	public int add(int a, int b) {
		return a + b; 
	}
	
	public int divide(int a, int b) {
		return a / b;
	}
	
	public int  findMax(int[] arr) {
		
		int max=0;
		
		for (int i = 0; i < arr.length; i++) {
			if(max < arr[i]) {
				max = arr[i];
			}
			
		}
		return max;
	}
}

